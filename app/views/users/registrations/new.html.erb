<div class="panel panel-default" style="max-width:400px;margin-left:auto;margin-right:auto;">
  <div class="panel-heading">   
    <h2 class="Title text-center panel-title">Sign up</h2>
  </div>
  <div class="sign_up panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :username, placeholder: 'Username', autofocus: true %>
        <%= f.hidden_field :role, value: 'customer' %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder: 'Email' %>
      </div>

      <div class="field">
      <%= f.password_field :password, placeholder: 'Password',autocomplete: "off" %><br />
        <% if @minimum_password_length %>
        <em>(Must be <%= @minimum_password_length %> characters or more)</em>
        <% end %>
        
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off" %>
      </div>

      <div class="actions reg">
        <%= f.submit "Sign up", class: 'btn' %>
      </div>
    <% end %> 
 </div>
</div>

<div class="panel panel-default" style="margin-right:auto; margin-left:auto; max-width: 400px;">


<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel-heading">
  <h1 class="panel-title">New Product</h1>
</div>
<div class="panel-body">

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, Product::CATEGORY, prompt: 'Please select' %>
  </div>
  <div class="field">
    <%= f.label :subcategory %><br>
    <%= f.select :subcategory, Product::SUB_CATEGORY, prompt: 'Please select' %>
  </div>

  <div class="field">
    <%= f.label :size %><br>
    <%= f.select :size, Product::SIZE_OPTIONS, prompt: 'Please select', { multiple: true, include_hidden: false } %>
  </div>

  <div class="field">
    <%= f.label :color %><br>
    <%= f.select :color, Product::COLOR_OPTIONS, prompt: 'Please select', { multiple: true, include_hidden: false } %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <%= f.file_field :secimage %>
  </div>

  <div class="field">
    <%= f.label :rrp %><br>
    <%= f.number_field :rrp, placeholder: '£ xx' %>
  </div>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, placeholder: '£ xx' %>
  </div>
  <div class="field">
    <%= f.label :delivery_price %><br>
    <%= f.number_field :delivery_price, placeholder: '£ xx' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

</div>

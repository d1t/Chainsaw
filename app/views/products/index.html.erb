

<div class="header">
<h1>Products</h1>
</div>
<div class="main">
  <% @products.in_groups_of(3, false).each do |group| %>
    <div class="row">
      <% for product in group %>
        <%= render product %>
      <% end %>
    </div>
  <% end %>

  <br>
  	<div class="center-block new_product">
  	<%= link_to 'New Product', new_product_path, class: 'btn' %>
	</div>
</div>
